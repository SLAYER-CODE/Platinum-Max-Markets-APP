<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>

            <item  android:right="35dp" android:top="0dp">
                <shape>
                    <!--                    <corners android:radius="50dp" />-->

                </shape>
            </item>
            <item >
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                    <!--                    <corners android:radius="50dp" />-->
                    <gradient
                        android:angle="0"
                        android:centerX="50%"
                        android:centerColor="@color/zxing_transparent"
                        android:endColor="@color/md_green_A700"
                        android:startColor="@color/black_overlay"
                        android:type="linear"
                        />

                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>


            <item >
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                    <!--                    <corners android:radius="50dp" />-->

                    <solid android:color="@color/md_green_500_75_overlay">
                    </solid>

                </shape>
            </item>
        </layer-list>
    </item>

</selector>