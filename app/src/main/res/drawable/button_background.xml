            <item android:right="5dp" android:top="0dp">
                <shape>
<!--                    <corners android:radius="50dp" />-->
                    <gradient
                        android:angle="0"
                        android:centerX="70%"
                        android:startColor="#804CFF5E"
                        android:centerColor="#80002935"
                        android:endColor="#8000FF40"
                        android:type="linear"
