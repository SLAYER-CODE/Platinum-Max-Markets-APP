                        android:endColor="#8053EF42"
                        android:type="linear"
                        />
                    <size
                        android:width="270dp"
                        android:height="60dp"
                        />
                    <stroke
                        android:width="2.5dp"
                        android:color="#20FA08"
                        />
                </shape>
            </item>
