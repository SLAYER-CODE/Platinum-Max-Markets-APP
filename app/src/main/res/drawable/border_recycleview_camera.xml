<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>

            <item android:bottom="20dp" android:left="0dp" android:right="0dp" android:top="20dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                    <size
                        android:width="270dp"
                        android:height="60dp"
                        />
                    <stroke
                        android:width="1dp"
                        android:color="#7E20FA08"
                        />
                </shape>

            </item>

            <item android:gravity="center" android:height="50dp">
                <shape  android:shape="rectangle">
                    <gradient
                        android:gradientRadius="20dp"
                        android:angle="90"
                        android:centerY="50%"
                        android:centerX="50%"
                        android:centerColor="#BF08FF00"
                        android:startColor="#0000FF1A"
                        android:endColor="#0000FF1A"
                        android:type="linear"/>
                </shape>
            </item>
            <item  android:id="@+id/lineanumerouno" android:gravity="center"  android:height="50dp">
                <shape android:shape="line" >
                    <stroke android:dashWidth="30dp"  android:dashGap="7dp"
                        android:width="2dp" android:color="#9F00FF7B">
                    </stroke>
                    <gradient
                        android:angle="90"
                        android:centerX="50%"
                        android:centerColor="@color/zxing_transparent"
                        android:startColor="#D803F1F1"
                        android:endColor="@color/zxing_transparent"
                        android:type="linear">
                    </gradient>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>