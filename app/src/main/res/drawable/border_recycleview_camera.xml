<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>

            <item android:bottom="20dp" android:left="0dp" android:right="0dp" android:top="20dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                    <size
                        android:width="270dp"
                        android:height="100dp"
                        />

                </shape>

            </item>
<!--            <item  android:gravity="center"  android:height="50dp">-->
            <item android:bottom="20dp" android:height="120dp" android:gravity="center_vertical" android:left="0dp" android:right="0dp" android:top="0dp">
<!--            <item android:gravity="center" android:height="60dp" android:top="20dp">-->
                <shape  android:shape="rectangle">
                    <gradient
                        android:gradientRadius="20dp"
                        android:angle="90"
                        android:centerY="10%"
                        android:centerX="40%"
                        android:centerColor="#BF08FF00"
                        android:startColor="#63000000"
                        android:endColor="#0000190D"
                        android:type="linear"/>
                </shape>
            </item>
            <item  android:id="@+id/lineanumerouno" android:gravity="center"  android:height="50dp">
                <shape android:shape="line" >
                    <gradient
                        android:gradientRadius="20dp"
                        android:angle="90"
                        android:centerY="50%"
                        android:centerX="50%"
                        android:centerColor="#BF08FF00"
                        android:startColor="#00B4B7F1"
                        android:endColor="#75000002"
                        android:type="linear"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>