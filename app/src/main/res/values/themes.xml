<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinalProductos" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_light_blue_600</item>
        <item name="colorPrimaryVariant">@color/zxing_transparent</item>
        <item name="colorOnPrimary">@color/md_white_1000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_light_blue_600</item>
        <item name="colorSecondaryVariant">@color/md_light_blue_600</item>
        <item name="colorOnSecondary">@color/md_white_1000</item>
        <!--        <item name="android:windowBackground" >@color/md_green_200</item>-->
        <item name="android:windowBackground" >@color/md_blue_50</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

        <item name="android:itemBackground">@color/md_white_1000</item>
        <item name="colorControlActivated">@color/md_light_blue_600</item>
        <item name="colorSwitchThumbNormal">@color/md_grey_50</item>
        <item name="colorControlNormal">@color/md_white_1000_50</item>
        <item name="colorControlHighlight">@color/md_light_blue_600</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="colorPrimaryDark">@color/md_grey_500</item>
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="Theme.FinalProductos.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="snackbarStyle">@style/MySnackBarStyle</item>
        <item name="snackbarTextViewStyle">@style/MySnackBarTextStyle</item>
    </style>

    <style name="MySnackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/md_blue_500</item>
    </style>

    <style name="MySnackBarTextStyle" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17dp</item>
    </style>


