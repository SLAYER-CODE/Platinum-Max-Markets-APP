<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinalProductos" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_light_blue_600</item>
        <item name="colorPrimaryVariant">@color/md_light_blue_600</item>
        <item name="colorOnPrimary">@color/md_white_1000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_light_blue_600</item>
        <item name="colorSecondaryVariant">@color/md_light_blue_600</item>
        <item name="colorOnSecondary">@color/md_white_1000</item>
        <!--        <item name="android:windowBackground" >@color/md_green_200</item>-->
        <item name="android:windowBackground" >@color/md_blue_50</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:itemBackground">@color/md_white_1000</item>
        <item name="colorControlActivated">@color/md_light_blue_600</item>
        <item name="colorSwitchThumbNormal">@color/md_grey_50</item>
        <item name="colorControlNormal">@color/md_white_1000_50</item>
        <item name="colorControlHighlight">@color/md_light_blue_600</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="colorPrimaryDark">@color/md_grey_500</item>
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="Theme.FinalProductos.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/md_white_1000</item>
    </style>

    <style name="Theme.Productos.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Productos.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.FinalProductos.Fullscreen" parent="Theme.FinalProductos">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.FinalProductos.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/md_white_1000</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ThemeOverlay.FinalProductos.FullscreenContainer" parent="Theme.FinalProductos.Fullscreen">
        <item name="fullscreenBackgroundColor">@color/md_light_blue_600</item>
        <item name="fullscreenTextColor">@color/md_light_blue_600</item>
        <item name="android:windowBackground">@color/md_white_1000</item>
    </style>
    <style name="EdiText">
        <item name="android:textColorHint">@color/md_black_1000_50</item>
    </style>
    <style name="DrawNavigation" >
        <item name="subheaderColor">@color/md_blue_500</item>
    </style>

    <style name="SplashThemeDos" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>


    <style name="TabLayoutView" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/md_blue_400</item>
        <item name="tabIconTint">@color/md_white_1000</item>
        <item name="tabSelectedTextColor">@color/md_white_1000</item>
        <item name="tabIndicatorColor">@color/md_black_1000</item>
        <item name="tabRippleColor">@color/md_white_1000_50</item>
        <item name="tabTextColor">@color/md_grey_500</item>
    </style>

    <style name="BarLayout">
        <item name="android:background">@color/md_blue_500</item>
        <item name="titleTextColor">@color/md_blue_500</item>
    </style>

    <style name="ButtonFloatLayout">
        <item name="android:backgroundTint">@color/md_blue_500</item>
    </style>

    <style name="IconItems">
        <item name="android:backgroundTint">@color/md_white_1000</item>
    </style>

    <style name="TextItemPrimero">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:shadowColor">@color/md_blue_A700</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="ButonActionBar">
        <item name="android:backgroundTint">@color/md_white_1000</item>
        <item name="android:foregroundTint">@color/md_white_1000_screen</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@color/md_white_1000</item>

    </style>


    <style name="BarActiveToolBar">
        <item name="android:background">@color/md_blue_500</item>
        <item name="titleTextColor">@color/md_white_1000</item>
    </style>

    <style name="textPresentation">
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:shadowColor">#7900A6FF</item>
        <item name="android:fontFamily">casual</item>
    </style>

    <style name="ToolBarLogin">
        <item name="titleTextColor">@color/md_black_1000</item>
    </style>

    <style name="DrawableFond">
        <item name="android:background">@color/md_blue_500_25</item>
    </style>

    <style name="fontMainDrawable">
<!--        <item name="android:background">@color/md_blue_500_25</item>-->
    </style>

    <style name="tabMainLayout">
        <item name="android:background">@color/md_cyan_500_25</item>
        <item name="tabSelectedTextColor">@color/md_blue_500</item>
        <item name="tabTextColor">@color/md_white_1000</item>
    </style>

    <style name="toggleButton_lint"  parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn">On</item>
        <item name="android:textOff">Off</item>
        <item name="android:colorControlActivated">@color/md_blue_500</item>
        <item name="android:textSize">10dp</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowColor">@color/md_black_1000_75</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="carView">
        <item name="cardBackgroundColor">@color/md_blue_100</item>
    </style>

    <style name="EditTextItem">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_black_1000</item>
    </style>


    <style name="ButtonSettingsItems">
        <item name="android:background">@color/md_cyan_A700</item>
        <item name="android:drawableTint">@color/md_white_1000</item>
    </style>

<!--    Item flotante de compra y venta-->
