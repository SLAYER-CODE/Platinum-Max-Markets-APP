<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinalProductos" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_green_A400</item>
        <item name="colorPrimaryVariant">@color/md_green_A400</item>
        <item name="colorOnPrimary">@color/md_white_1000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_green_A400</item>
        <item name="colorSecondaryVariant">@color/md_green_500</item>
        <item name="colorOnSecondary">@color/md_black_1000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FinalProductos.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.Productos.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Productos.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.FinalProductos.Fullscreen" parent="Theme.FinalProductos">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.FinalProductos.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.FinalProductos.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/md_light_blue_600</item>
        <item name="fullscreenTextColor">@color/md_light_blue_600</item>
    </style>

    <style name="SplashThemeDos" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>


</resources>