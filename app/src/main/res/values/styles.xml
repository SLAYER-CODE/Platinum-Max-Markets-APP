<resources>

    <style name="Widget.Theme.FinalProductos.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.FinalProductos.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="MySpiner">
        <item name="android:background">@color/backgroud_addproduct</item>
        <item name="android:dropDownSelector">@drawable/button_states</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <item name="android:dropDownWidth">wrap_content</item>
    </style>

</resources>