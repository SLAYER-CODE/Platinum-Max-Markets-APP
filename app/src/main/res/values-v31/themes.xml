<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.FinalProductos.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="snackbarStyle">@style/MySnackBarStyle</item>
        <item name="snackbarTextViewStyle">@style/MySnackBarTextStyle</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="MySnackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/md_blue_500</item>
    </style>

    <style name="MySnackBarTextStyle" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="Theme.Productos.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Productos.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.FinalProductos.NoActionBar">


        <item name="android:windowSplashScreenBackground">@color/md_white_1000_screen</item>

        <!--<item name="android:background" >@drawable/background_splash</item>-->
        <!--        <item name="android:background" >@mipmap/ic_launcher_logo</item>-->
        <item name="android:windowBackground">@color/md_white_1000_screen</item>
        <item name="colorPrimary">@color/md_blue_400</item>
        <item name="colorPrimaryDark">@color/md_blue_400</item>
        <item name="colorAccent">@color/md_blue_400</item>
        <item name="android:statusBarColor">@color/md_white_1000_screen</item>
    </style>

    <style name="Theme.FinalProductos.Fullscreen" parent="Theme.FinalProductos">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.FinalProductos.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/md_white_1000</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ThemeOverlay.FinalProductos.FullscreenContainer" parent="Theme.FinalProductos.Fullscreen">
        <item name="fullscreenBackgroundColor">@color/md_light_blue_600</item>
        <item name="fullscreenTextColor">@color/md_light_blue_600</item>
        <item name="android:windowBackground">@color/md_white_1000</item>
    </style>
    <style name="EdiText">
        <item name="android:textColorHint">@color/md_black_1000_50</item>
    </style>
    <style name="DrawNavigation" >
        <item name="subheaderColor">@color/md_blue_500</item>
    </style>

    <style name="SplashThemeDos" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>


    <style name="TabLayoutView" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/md_blue_400</item>
        <item name="tabIconTint">@color/md_white_1000</item>
        <item name="tabSelectedTextColor">@color/md_white_1000</item>
        <item name="tabIndicatorColor">@color/md_black_1000</item>
        <item name="tabRippleColor">@color/md_white_1000_50</item>
        <item name="tabTextColor">@color/md_grey_500</item>
    </style>

    <style name="BarLayout">
        <item name="android:background">@color/md_blue_500</item>
        <item name="titleTextColor">@color/md_blue_500</item>
    </style>

    <style name="ButtonFloatLayout">
        <item name="android:backgroundTint">@color/md_blue_500</item>
    </style>

    <style name="IconItems">
        <item name="android:backgroundTint">@color/md_grey_400</item>
    </style>

    <style name="TextItemPrimero">
        <item name="android:textColor">@color/md_grey_400</item>
        <item name="android:shadowColor">@color/md_blue_grey_300</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="ButonActionBar">
        <item name="android:backgroundTint">@color/md_white_1000</item>
        <item name="android:foregroundTint">@color/md_white_1000_screen</item>
    </style>


    <style name="BarActiveToolBar">
        <item name="android:background">@color/md_blue_500</item>
        <item name="titleTextColor">@color/md_white_1000</item>

    </style>

    <style name="textPresentation">
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:shadowColor">#7900A6FF</item>
        <item name="android:fontFamily">casual</item>
    </style>

    <style name="ToolBarLogin">
        <item name="titleTextColor">@color/md_black_1000</item>
    </style>



    <style name="FontIconConfig">
        <item name="android:backgroundTint">@color/md_black_1000</item>
    </style>

    <style name="DrawableFondTabs">
        <item name="android:background">@color/md_white_1000</item>
    </style>


    <style name="DrawableFond">
        <item name="android:background">@color/md_blue_500</item>
    </style>

    <style name="fontMainDrawable">
        <item name="android:background">@color/md_blue_500_25</item>
    </style>

    <style name="tabMainLayout">
        <item name="android:background">@color/md_white_1000</item>
        <item name="tabSelectedTextColor">@color/md_blue_500</item>
        <item name="tabTextColor">@color/md_grey_400</item>
        <item name="tabIndicatorColor">@color/md_blue_500</item>
    </style>


    <style name="toggleButton_lint"  parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn">On</item>
        <item name="android:textOff">Off</item>
        <item name="android:colorControlActivated">@color/md_blue_500</item>
        <item name="android:textSize">10dp</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowColor">@color/md_black_1000_75</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="carView">
        <item name="cardBackgroundColor">@color/md_blue_100</item>
    </style>

    <style name="QRContainer">
        <item name="android:backgroundTint">@color/md_white_1000</item>
    </style>

    <style name="QRRescanner">
        <item name="android:backgroundTint">@color/md_cyan_500</item>
    </style>
</resources>