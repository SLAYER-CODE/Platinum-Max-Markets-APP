<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinalProductos" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_black_1000</item>
        <item name="colorPrimaryVariant">@color/md_blue_grey_50</item>
        <item name="colorOnPrimary">@color/md_grey_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_grey_900</item>
        <item name="colorSecondaryVariant">@color/md_grey_900</item>
        <item name="colorOnSecondary">@color/md_black_1000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FinalProductos.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Productos.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Productos.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.FinalProductos.Fullscreen" parent="Theme.FinalProductos">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.FinalProductos.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.FinalProductos.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/md_falcon_400</item>
        <item name="fullscreenTextColor">@color/md_white_1000</item>
    </style>

    <style name="SplashTheme" parent="Theme.Design.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground" >@drawable/background_splash</item>
        <item name="colorPrimary">@color/md_black_1000</item>
        <item name="colorPrimaryDark">@color/ef_black_alpha_50</item>
        <item name="colorAccent">@color/md_grey_900</item>
        <item name="android:statusBarColor">@color/md_grey_400</item>
    </style>
</resources>