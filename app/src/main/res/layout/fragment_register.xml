<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.finalproductos.FullscreenContainer"
    tools:context=".ui.View.fragment.Register">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbarParent"
        style="@style/BarLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:collapsedTitleTextColor="@color/md_white_1000"
            app:contentScrim="@color/md_blue_300"
            app:expandedTitleGravity="start|bottom"
            app:expandedTitleMarginBottom="55dp"
            app:expandedTitleTextAppearance="@style/TextTitleRegister"
            app:expandedTitleTextColor="@color/md_white_1000"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:scrimAnimationDuration="@integer/material_motion_duration_medium_1"
            app:titleCollapseMode="scale">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/IVLogo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="left|bottom"
                    android:layout_margin="2dp"
                    android:background="@drawable/baseline_how_to_reg_24"
                    android:backgroundTint="@color/md_white_1000" />

            </LinearLayout>

            <TextView
                android:id="@+id/TVDetails"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="2dp"
                android:text="@string/titleRegisterAnotationDetails"
                android:textColor="@color/md_white_1000"
                android:textSize="15dp"
                android:fontFamily="@font/lobster_regular"/>

            <TextView
                android:id="@+id/TVNick"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="2dp"
                android:lines="2"
                android:text="@string/titleRegisterDetails"
                android:textColor="@color/md_white_1000"
                android:textSize="17dp"
                android:textStyle="bold" />

            <com.airbnb.lottie.LottieAnimationView
                android:elevation="0dp"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_gravity="right|center"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/fragment_register">

            </com.airbnb.lottie.LottieAnimationView>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/BarActiveToolBar"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:contentInsetStart="0dp"
                android:contentInsetStartWithNavigation="0dp"
                android:paddingTop="25dp"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|snap|snapMargins"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:title="@string/titleRegister"
                app:titleTextColor="@color/md_blue_500">

                <LinearLayout

                    android:id="@+id/BIShowP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/BQRScanner"
                        style="@style/ButonActionBar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/zxing_transparent"
                        android:drawableRight="@drawable/ic_baseline_qr_code_scanner_showproduct"
                        android:drawableTint="@color/md_white_1000"
                        android:fontFamily="@font/cherry_regular"
                        android:minWidth="50dp"
                        android:text="@string/titleRegisterEmployed"
                        android:textColor="@color/md_white_1000" />


                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/img"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipToPadding="true"
                app:cardBackgroundColor="@color/zxing_transparent"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/md_black_1000_50"
                    android:gravity="center"
                    android:layoutMode="opticalBounds"
                    android:orientation="vertical"
                    android:padding="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <EditText
                        android:id="@+id/ETusername"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:autofillHints="@string/prompt_email"
                        android:hint="@string/prompt_email"
                        android:inputType="textEmailAddress"
                        android:selectAllOnFocus="true"
                        android:textColor="@color/md_blue_900" />

                    <EditText
                        android:id="@+id/ETpassword"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:autofillHints="@string/prompt_password"
                        android:hint="@string/prompt_password"
                        android:imeActionLabel="@string/action_sign_in_short"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:selectAllOnFocus="true"
                        android:textColor="#FFFFFF" />


                    <View
                        android:id="@+id/divider3"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/md_blue_A700" />


                    <EditText
                        android:id="@+id/ETpasswordRepet"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:autofillHints="@string/prompt_password"
                        android:hint="@string/passwordRepet"
                        android:imeActionLabel="@string/action_sign_in_short"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:selectAllOnFocus="true"
                        android:textColor="#FFFFFF" />

                    <EditText
                        android:id="@+id/ETtelefono"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:autofillHints="@string/prompt_email"
                        android:hint="@string/prompt_telefono"
                        android:inputType="phone"
                        android:selectAllOnFocus="true"
                        android:textColor="#FFFFFF" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/md_blue_A400" />

                    <EditText
                        android:id="@+id/ETname"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:autofillHints="@string/prompt_email"
                        android:hint="@string/nombre"
                        android:inputType="text"
                        android:selectAllOnFocus="true"
                        android:textColor="#FFFFFF" />

                    <EditText
                        android:id="@+id/ETLastname"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:autofillHints="@string/prompt_email"
                        android:hint="@string/lastname"
                        android:inputType="text"
                        android:selectAllOnFocus="true"
                        android:textColor="#FFFFFF" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/md_blue_A200" />
                    <EditText
                        android:id="@+id/ETapodo"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:autofillHints="@string/prompt_email"
                        android:hint="@string/apodo"
                        android:inputType="text"
                        android:selectAllOnFocus="true"
                        android:textColor="#FFFFFF" />

                    <EditText
                        android:id="@+id/ETcontry"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:autofillHints="@string/prompt_email"
                        android:hint="@string/contry"
                        android:inputType="textAutoComplete"
                        android:selectAllOnFocus="true"
                        android:textColor="#FFFFFF" />

                   <Button
                       android:drawableRight="@drawable/baseline_app_registration_24"
                       android:drawableTint="@color/md_white_1000"
                       android:fontFamily="@font/lilitaoe_regular"
                        android:id="@+id/login"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/md_blue_400"
                        android:enabled="true"
                        android:text="@string/titleRegisterButton"
                        android:textColor="#F3F3F3"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>