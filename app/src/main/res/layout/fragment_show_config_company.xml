<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    tools:context=".ui.View.fragment.Root.Config.ShowConfigCompanyFragment">

    <LinearLayout
        android:layout_marginTop="50dp"
        style="@style/DrawableFondTabs"
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="40dp"
            android:text="@string/config_company">
        </TextView>

        <LinearLayout
            android:id="@+id/settingsItemAplication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:visibility="visible"
            tools:visibility="visible"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    style="@style/FontIconConfig"
                    android:background="@drawable/baseline_aspect_ratio_24"
                    android:layout_weight="0"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp">
                </View>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/TIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/config_company_icon"
                        android:textStyle="bold"
                        android:textSize="17dp">

                    </TextView>
                    <TextView
                        android:id="@+id/TCompanyDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/config_company_icon_details"
                        android:padding="6dp"
                        android:textSize="14dp">
                    </TextView>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="center"
                    style="@style/FontIconConfig"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:layout_weight="0"
                    android:layout_width="70dp"
                    android:layout_height="match_parent">
                </androidx.appcompat.widget.AppCompatImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <View
                    style="@style/FontIconConfig"
                    android:background="@drawable/baseline_drive_file_rename_outline_24"
                    android:layout_weight="0"
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp">
                </View>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Tname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:text="@string/config_company_name"
                        android:textStyle="bold"
                        android:textSize="17dp">

                    </TextView>
                        <TextView
                            android:id="@+id/TnameCompany"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/config_company_name_default"
                            android:textStyle="italic"
                            android:textSize="17dp">

                        </TextView>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/TWifiComment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="center_vertical"
                        android:text="@string/config_company_name_details"
                        android:padding="6dp"
                        android:textSize="14dp">
                    </TextView>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    style="@style/FontIconConfig"
                    android:background="@drawable/baseline_brush_24"
                    android:layout_weight="0"
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp">
                </View>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"

                    >
                    <TextView
                        android:id="@+id/TUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="center_vertical"
                        android:text="@string/config_company_color"
                        android:textStyle="bold"
                        android:textSize="17dp">

                    </TextView>
                    <TextView
                        android:id="@+id/UserComment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/config_company_color_details"
                        android:padding="6dp"
                        android:textSize="14dp">
                    </TextView>
                </LinearLayout>
                <View
                    android:layout_marginRight="50dp"
                    android:layout_gravity="center"
                    android:background="@color/md_blue_600"
                    android:layout_weight="0"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                </View>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    style="@style/FontIconConfig"
                    android:background="@drawable/baseline_qr_code_2_24"
                    android:layout_weight="0"
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp">
                </View>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/Tcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:text="@string/config_company_code"
                            android:textStyle="bold"
                            android:textSize="17dp">

                        </TextView>
                        <TextView
                            android:id="@+id/TcodeText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/config_company_code_default"
                            android:textStyle="italic"
                            android:textSize="17dp">
                        </TextView>


                    </LinearLayout>
                    <TextView
                        android:id="@+id/TcodeDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/config_company_code_details"
                        android:padding="6dp"
                        android:textSize="14dp">
                    </TextView>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    style="@style/FontIconConfig"
                    android:background="@drawable/baseline_person_24"
                    android:layout_weight="0"
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp">
                </View>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/Tdueño"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:text="@string/config_company_dueño"
                            android:textStyle="bold"
                            android:textSize="17dp">

                        </TextView>
                        <TextView
                            android:id="@+id/Tdueñotext"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/config_company_dueño_default"
                            android:textStyle="italic"
                            android:textSize="17dp">
                        </TextView>


                    </LinearLayout>
                    <TextView
                        android:id="@+id/TdueñoDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/config_company_dueño_details"
                        android:padding="6dp"
                        android:textSize="14dp">
                    </TextView>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    style="@style/FontIconConfig"
                    android:background="@drawable/baseline_integration_instructions_24"
                    android:layout_weight="0"
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp">
                </View>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/Truc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:text="@string/config_company_ruc"
                            android:textStyle="bold"
                            android:textSize="17dp">

                        </TextView>
                        <TextView
                            android:id="@+id/TrucText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/config_company_ruc_default"
                            android:textStyle="italic"
                            android:textSize="17dp">
                        </TextView>


                    </LinearLayout>
                    <TextView
                        android:id="@+id/TrucDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/config_company_ruc_details"
                        android:padding="6dp"
                        android:textSize="14dp">
                    </TextView>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
<!--El estado puede cambiar entre privado, publico , cerrado , clausurado, etc-->
                <View
                    style="@style/FontIconConfig"
                    android:background="@drawable/baseline_real_estate_agent_24"
                    android:layout_weight="0"
                    android:layout_margin="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp">
                </View>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/Tstatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:text="@string/config_company_status"
                            android:textStyle="bold"
                            android:textSize="17dp">

                        </TextView>
                        <TextView
                            android:id="@+id/TstatusDefault"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/config_company_status_default"
                            android:textStyle="italic"
                            android:textSize="17dp">
                        </TextView>


                    </LinearLayout>
                    <TextView
                        android:id="@+id/TstatusDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/config_company_status_details"
                        android:padding="6dp"
                        android:textSize="14dp">
                    </TextView>
                </LinearLayout>

                <View
                    style="@style/FontIconConfig"
                    android:background="@drawable/baseline_public_24"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                </View>
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>