<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    tools:context=".ui.View.fragment.HomeFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbarParent"
        style="@style/BarLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:collapsedTitleTextColor="@color/md_white_1000"
            app:contentScrim="@color/md_blue_300"
            app:expandedTitleGravity="start|bottom"
            app:expandedTitleMarginBottom="25dp"
            app:expandedTitleTextAppearance="@style/TextTitle"
            app:expandedTitleTextColor="@color/md_white_1000"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:scrimAnimationDuration="@integer/material_motion_duration_medium_1"
            app:titleCollapseMode="scale">
            <!--  En caso de que la barra tambien desaparesca          app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"-->


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_marginTop="20dp"
                android:fitsSystemWindows="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"
                app:lottie_renderMode="software"
                app:lottie_speed="0.5" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/IVLogo"
                    android:layout_margin="2dp"
                    android:layout_gravity="left|bottom"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            <TextView
                android:layout_gravity="bottom"
                android:textColor="@color/md_white_1000"
                tools:text="Asociado"
                android:id="@+id/RoleSuper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cherry_regular"
                android:textSize="18dp"/>
            <TextView
                android:layout_gravity="bottom"
                android:textColor="@color/md_cyan_A400"
                tools:text="(jefe)"
                android:id="@+id/RoleSeudo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cherry_regular"
                android:textSize="15dp"/>
            </LinearLayout>

            <TextView
                android:textStyle="bold"
                tools:text="1edw33@gmail.com"
                android:id="@+id/TVNick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:layout_marginLeft="15dp"
                android:textColor="@color/md_white_1000"
                android:layout_marginBottom="2dp"
                android:textSize="17dp"/>



            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/BarActiveToolBar"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:paddingTop="25dp"
                android:background="@color/black_overlay"
                android:contentInsetStart="0dp"
                android:contentInsetStartWithNavigation="0dp"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|snap|snapMargins"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:title="@string/titleHomeChange"
                app:titleTextColor="@color/md_blue_500">

                <LinearLayout

                    android:id="@+id/BIShowP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/SVProducts"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_weight="2"
                        android:foreground="@color/md_white_1000"
                        android:foregroundGravity="right"
                        android:gravity="left"
                        android:theme="@style/ButonActionBar"
                        app:searchIcon="@drawable/ic_baseline_image_search_showproduct" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/Testing"
                        style="@style/ButonActionBar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_baseline_qr_code_scanner_showproduct"
                        android:minWidth="50dp" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/BQRScanner"
                        style="@style/ButonActionBar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_baseline_qr_code_scanner_showproduct"
                        android:minWidth="50dp" />


                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>

            <ProgressBar
                android:id="@+id/PBbarList"
                style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#000000"
                android:hapticFeedbackEnabled="true"
                android:indeterminate="true"
                android:indeterminateOnly="true"
                android:indeterminateTint="#11FF00"
                android:indeterminateTintMode="src_atop"
                android:progressBackgroundTint="#000000"
                android:progressTint="#000000"
                android:requiresFadingEdge="horizontal"
                android:secondaryProgressTint="#000000"
                android:soundEffectsEnabled="true"
                android:visibility="gone" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        style="@style/DrawableFondTabs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/LLAnonime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/CVPrimaryAnonime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="5dp"
                    android:layout_margin="7dp"
                    app:cardElevation="7dp"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/TVEncargoAnonime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:drawableLeft="@drawable/baseline_supervised_user_circle_24"
                            android:text="@string/home_anonime_title"
                            android:textSize="15dp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/baseline_functions_24"
                            android:drawableTint="@color/md_green_A700"
                            android:text="@string/home_anonime_fasted"
                            android:textColor="@color/md_green_A700"
                            android:textSize="15dp"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:overScrollMode="never"
                    android:nestedScrollingEnabled="false"
                    android:id="@+id/RVMenuHomeAnoime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/LLAnonime">



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/CVPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="5dp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="3dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/TVEncargo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="2dp"
                                android:drawableLeft="@drawable/baseline_supervised_user_circle_24"
                                android:text="@string/home_title_admin"
                                android:textSize="15dp"
                                android:textStyle="bold"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableRight="@drawable/baseline_functions_24"
                                android:drawableTint="@color/md_green_A700"
                                android:text="@string/home_title_admin_fun"
                                android:textColor="@color/md_green_A700"
                                android:textSize="15dp"
                                android:textStyle="bold"></TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/RVMenuHome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:overScrollMode="never"
                        android:nestedScrollingEnabled="false"
                        app:layout_constraintTop_toBottomOf="@id/CVPrimary"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"/>


                    <androidx.cardview.widget.CardView
                        app:layout_constraintTop_toBottomOf="@id/RVMenuHome"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:id="@+id/CVSecondary"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="5dp"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="3dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/TVUserSecond"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="2dp"
                                android:drawableLeft="@drawable/baseline_person_24"
                                android:text="@string/home_title_user"
                                android:textSize="15dp"
                                android:textStyle="bold"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableRight="@drawable/baseline_functions_24"
                                android:drawableTint="@color/md_green_A700"
                                android:text="@string/home_title_user_fun"
                                android:textColor="@color/md_green_A700"
                                android:textSize="15dp"
                                android:textStyle="bold"></TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:overScrollMode="never"
                        android:nestedScrollingEnabled="false"
                        android:id="@+id/RVMenuUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/CVSecondary"
                        tools:visibility="visible"/>

                    <LinearLayout
                        android:id="@+id/LLError"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@color/md_grey_500_25"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:elevation="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:visibility="visible">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/LAError"
                            android:layout_width="300dp"
                            android:layout_height="300dp"
                            android:layout_gravity="center"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:lottie_autoPlay="false"
                            app:lottie_loop="false"
                            app:lottie_rawRes="@raw/error_404"
                            app:lottie_renderMode="software"
                            app:lottie_speed="0.5" />


                            <LinearLayout
                                android:layout_margin="20dp"
                                android:layout_marginTop="0dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <Button
                                android:maxLines="2"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:id="@+id/BRlogin"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:drawableLeft="@drawable/baseline_refresh_24"
                                android:drawableTint="@color/md_cyan_A400"
                                android:text="@string/home_error_button"/>
                            <Button
                                android:maxLines="2"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:id="@+id/BRAnonime"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:drawableLeft="@drawable/baseline_face_24"
                                android:drawableTint="@color/md_cyan_A400"
                                android:text="@string/home_error_anonime"/>
                            </LinearLayout>


                    </LinearLayout>
                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/SFChangeFuctions"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="2dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shimmer_auto_start="true"
                        app:shimmer_duration="1000"
                        app:shimmer_highlight_alpha="200"
                        app:shimmer_repeat_mode="restart"
                        app:shimmer_shape="linear">

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:columnCount="2"
                            android:padding="5dp"
                            android:rowCount="5">

                            <include
                                layout="@layout/item_menu_home_list_shimmer"
                                android:layout_width="0dp"
                                android:layout_height="180dp"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:layout_gravity="fill"
                                android:layout_margin="5dp" />

                            <include
                                layout="@layout/item_menu_home_list_shimmer"
                                android:layout_width="0dp"
                                android:layout_height="180dp"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:layout_gravity="fill"
                                android:layout_margin="5dp" />

                            <include
                                layout="@layout/item_menu_home_list_shimmer"
                                android:layout_width="0dp"
                                android:layout_height="180dp"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:layout_gravity="fill"
                                android:layout_margin="5dp" />

                            <include
                                layout="@layout/item_menu_home_list_shimmer"
                                android:layout_width="0dp"
                                android:layout_height="180dp"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:layout_gravity="fill"
                                android:layout_margin="5dp" />

                        </GridLayout>

                    </com.facebook.shimmer.ShimmerFrameLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>