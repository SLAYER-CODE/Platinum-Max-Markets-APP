<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    tools:context=".ui.View.fragment.Root.ConfigurationRoot">

<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        style="@style/DrawableFondTabs"
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/config_separate_area_app"
                android:textColor="@color/md_blue_A400"
                android:textStyle="bold"
                android:textSize="20sp" />

            <View
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="@color/md_blue_A400"
                android:backgroundTintMode="add"
                android:foregroundTint="#FFFFFF"
                android:foregroundTintMode="add" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/settingsItemAplication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:visibility="visible"
            tools:visibility="visible"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    style="@style/FontIconConfig"
                    android:background="@drawable/baseline_add_business_24"
                    android:layout_weight="0"
                    android:layout_margin="10dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp">
                </View>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/TCompany"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/config_company"
                        android:textStyle="bold"
                        android:textSize="17dp">

                    </TextView>
                    <TextView
                        android:id="@+id/TCompanyDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/config_company_details"
                        android:padding="6dp"
                        android:textSize="14dp">
                    </TextView>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    style="@style/FontIconConfig"

                    android:background="@drawable/baseline_wifi_channel_24"
                    android:layout_weight="0"
                    android:layout_margin="10dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp">
                </View>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"

                    >
                <TextView
                    android:id="@+id/TWifiConnect"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/config_wifi"
                    android:textStyle="bold"
                    android:textSize="17dp">

                </TextView>
                    <TextView
                        android:id="@+id/TWifiComment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/config_wifi_details"
                        android:padding="6dp"
                        android:textSize="14dp">

                    </TextView>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    style="@style/FontIconConfig"

                    android:background="@drawable/baseline_person_24"
                    android:layout_weight="0"
                    android:layout_margin="10dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp">
                </View>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"

                    >
                    <TextView
                        android:id="@+id/TUser"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/config_user"
                        android:textStyle="bold"
                        android:textSize="17dp">

                    </TextView>
                    <TextView
                        android:id="@+id/UserComment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/config_user_details"
                        android:padding="6dp"
                        android:textSize="14dp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/AppText"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/config_separate_area_user"
                android:textColor="@color/md_blue_A400"
                android:textStyle="bold"
                android:textSize="20sp" />

            <View
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="@color/md_blue_A400"
                android:backgroundTintMode="add"
                android:foregroundTint="#FFFFFF"
                android:foregroundTintMode="add" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settingsItemUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:visibility="visible"
            tools:visibility="visible"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    style="@style/FontIconConfig"

                    android:background="@drawable/baseline_co_present_24"
                    android:layout_weight="0"
                    android:layout_margin="10dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp">
                </View>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/TEmpleados"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/config_empleados"
                        android:textStyle="bold"
                        android:textSize="17dp">

                    </TextView>
                    <TextView
                        android:id="@+id/TEmpleadosDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/config_empleados_details"
                        android:padding="6dp"
                        android:textSize="14dp">
                    </TextView>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    style="@style/FontIconConfig"

                    android:background="@drawable/baseline_transfer_within_a_station_24"
                    android:layout_weight="0"
                    android:layout_margin="10dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp">
                </View>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"

                    >
                    <TextView
                        android:id="@+id/TProveedores"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/config_proveedores"
                        android:textStyle="bold"
                        android:textSize="17dp">

                    </TextView>
                    <TextView
                        android:id="@+id/TProveedoresDetails"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/config_proveedores_details"
                        android:padding="6dp"
                        android:textSize="14dp">

                    </TextView>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    style="@style/FontIconConfig"
                    android:background="@drawable/baseline_shopping_cart_24"
                    android:layout_weight="0"
                    android:layout_margin="15dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp">
                </View>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"

                    >
                    <TextView
                        android:id="@+id/TProduct"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/config_products"
                        android:textStyle="bold"
                        android:textSize="20dp">
                    </TextView>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=">"
                    android:textStyle="normal"
                    android:textSize="30dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/SistemTextDivider"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/config_separate_area_system"
                android:textColor="@color/md_blue_A400"
                android:textStyle="bold"
                android:textSize="20sp" />

            <View
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="@color/md_blue_A400"
                android:backgroundTintMode="add"
                android:foregroundTint="#FFFFFF"
                android:foregroundTintMode="add" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/settingsItemDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:visibility="visible"
            tools:visibility="visible"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    style="@style/FontIconConfig"
                    android:background="@drawable/ic_baseline_sd_storage_24"
                    android:layout_weight="0"
                    android:layout_margin="10dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp">
                </View>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/TStorage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/config_storage"
                        android:textStyle="bold"
                        android:textSize="20dp">

                    </TextView>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=">"
                    android:textStyle="normal"
                    android:textSize="30dp">
                </TextView>


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    style="@style/FontIconConfig"
                    android:background="@drawable/baseline_memory_24"
                    android:layout_weight="0"
                    android:layout_margin="10dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp">
                </View>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/TProcess"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/config_process"
                        android:textStyle="bold"
                        android:textSize="17dp">

                    </TextView>
                    <TextView
                        android:id="@+id/TProcessDetails"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/config_process_details"
                        android:padding="6dp"
                        android:textSize="14dp">

                    </TextView>

                </LinearLayout>



            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>