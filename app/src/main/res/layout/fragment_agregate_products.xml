<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FLPrincipio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:animateLayoutChanges="true"

    android:background="@color/black"
    android:foregroundGravity="bottom"
    tools:context=".AgregateProducts">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/SVAPNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:fillViewport="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/newConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:foregroundGravity="top|bottom"
            android:importantForAutofill="no|yesExcludeDescendants">

            <LinearLayout
                android:id="@+id/llinearConstraint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="false"
                android:foregroundGravity="bottom"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:shadowColor="#00F345"
                        android:shadowDx="10"
                        android:shadowDy="10"
                        android:shadowRadius="10"
                        android:text="Obligatorio"
                        android:textColor="#ED00FA5C"
                        android:textSize="20sp" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="?android:attr/listDivider"
                        android:backgroundTint="#FD00FF0D"
                        android:backgroundTintMode="add"
                        android:foregroundTint="#FFFFFF"
                        android:foregroundTintMode="add" />

                </LinearLayout>

                <EditText
                    android:id="@+id/TENombre"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:backgroundTint="#91FFEF"
                    android:ems="10"
                    android:hint="Nombre"
                    android:inputType="text"
                    android:shadowColor="#2AFF12"
                    android:textColor="#33EDF3"
                    android:textColorHighlight="#1EA825"
                    android:textColorHint="#8EDDDB"
                    android:textColorLink="#FF0101" />

                <EditText
                    android:id="@+id/TEPrecio"
                    android:layout_width="match_parent"
                    android:layout_height="71dp"
                    android:backgroundTint="#91FFEF"
                    android:ems="10"
                    android:hint="Precio C"
                    android:inputType="numberDecimal"
                    android:shadowColor="#2AFF12"
                    android:textColor="#33EDF3"
                    android:textColorHighlight="#1EA825"
                    android:textColorHint="#8EDDDB"
                    android:textColorLink="#FF0101" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="113dp"
                        android:layout_height="wrap_content"
                        android:shadowColor="#00FF2A"
                        android:shadowDx="10"
                        android:shadowDy="10"
                        android:shadowRadius="10"
                        android:text="Opcional"
                        android:textColor="#ED00FA5C"
                        android:textSize="20sp" />

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="?android:attr/listDivider"
                        android:backgroundTint="#FD00FF0D"
                        android:backgroundTintMode="add"
                        android:foregroundTint="#FFFFFF"
                        android:foregroundTintMode="add" />

                </LinearLayout>

                <EditText

                    android:id="@+id/TEPrecioU"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:backgroundTint="#91FFEF"
                    android:ems="10"
                    android:hint="Precio U"
                    android:inputType="numberDecimal"
                    android:shadowColor="#2AFF12"
                    android:textColor="#33EDF3"
                    android:textColorHighlight="#1EA825"
                    android:textColorHint="#8EDDDB"
                    android:textColorLink="#FF0101" />

                <EditText

                    android:id="@+id/TEMarca"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:backgroundTint="#91FFEF"
                    android:ems="10"
                    android:hint="Marca"
                    android:inputType="text"
                    android:shadowColor="#2AFF12"
                    android:textColor="#33EDF3"
                    android:textColorHighlight="#1EA825"
                    android:textColorHint="#8EDDDB"
                    android:textColorLink="#FF0101" />

                <EditText

                    android:id="@+id/TECategoria"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:backgroundTint="#91FFEF"
                    android:ems="10"
                    android:hint="Categoria"
                    android:inputType="text"
                    android:shadowColor="#2AFF12"
                    android:textColor="#33EDF3"
                    android:textColorHighlight="#1EA825"
                    android:textColorHint="#8EDDDB"
                    android:textColorLink="#FF0101" />

                <EditText
                    android:id="@+id/TECantidad"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    android:backgroundTint="#91FFEF"
                    android:ems="10"
                    android:hint="Cantidad C:"
                    android:inputType="number"
                    android:shadowColor="#2AFF12"
                    android:textColor="#33EDF3"
                    android:textColorHighlight="#1EA825"
                    android:textColorHint="#82D1C1" />

                <EditText
                    android:id="@+id/TECantidadU"
                    android:layout_width="match_parent"
                    android:layout_height="77dp"
                    android:backgroundTint="#91FFEF"
                    android:ems="10"
                    android:hint="Cantidad U:"
                    android:inputType="number"
                    android:shadowColor="#2AFF12"
                    android:textColor="#33EDF3"
                    android:textColorHighlight="#1EA825"
                    android:textColorHint="#82D1C1" />

                <EditText
                    android:id="@+id/TECaracteristicas"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:backgroundTint="#91FFEF"
                    android:ems="10"
                    android:hint="Caracteristicas"
                    android:inputType="textMultiLine"
                    android:shadowColor="#2AFF12"
                    android:textColor="#33EDF3"
                    android:textColorHighlight="#1EA825"
                    android:textColorHint="#8EDDDB"
                    android:textColorLink="#FF0101" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:foregroundGravity="center"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/TEQR"
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:layout_weight="1"
                        android:backgroundTint="#91FFEF"
                        android:ems="10"
                        android:hint="QR"
                        android:inputType="textMultiLine"
                        android:shadowColor="#2AFF12"
                        android:textColor="#33EDF3"
                        android:textColorHighlight="#1EA825"
                        android:textColorHint="#8EDDDB"
                        android:textColorLink="#FF0101" />

                    <Button
                        android:id="@+id/BEscaner"
                        android:layout_width="63dp"
                        android:layout_height="56dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/ic_baseline_document_scanner_24" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearConstraitButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="30dp"
                    android:descendantFocusability="blocksDescendants"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/LayoutCamera"
                        android:layout_width="400dp"
                        android:layout_height="400dp"
                        android:layout_gravity="bottom|center"
                        android:animateLayoutChanges="true"
                        android:descendantFocusability="blocksDescendants"
                        android:foregroundGravity="top"
                        android:layoutDirection="locale"
                        android:visibility="gone">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"></LinearLayout>

                        <androidx.camera.view.PreviewView
                            android:id="@+id/PVCmain"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:animateLayoutChanges="true"
                            android:background="#0038FF00"
                            android:toDegrees="90"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0"
                            app:scaleType="fillCenter">

                        </androidx.camera.view.PreviewView>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraintqr"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <View
                                android:id="@+id/Vqrline"
                                android:layout_width="305dp"
                                android:layout_height="120dp"
                                android:background="@drawable/line_qr_scan"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:layout_editor_absoluteY="40dp" />

                            <View
                                android:id="@+id/borderqrxml"
                                android:layout_width="320dp"
                                android:layout_height="320dp"
                                android:layout_marginStart="40dp"
                                android:layout_marginTop="40dp"
                                android:layout_marginEnd="40dp"
                                android:layout_marginBottom="40dp"
                                android:background="@drawable/border_qr"
                                android:foregroundGravity="center"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/despliegeCamera"
                            android:layout_width="82dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="25dp"
                            android:width="200dp"
                            android:height="200dp"
                            android:background="@drawable/ic_baseline_keyboard_double_arrow_up_24"
                            android:backgroundTintMode="multiply"
                            android:elevation="2dp"
                            android:hapticFeedbackEnabled="false"
                            android:paddingTop="10dp"
                            android:scaleType="fitCenter"
                            android:textColor="#757575"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/BcaptureImage"
                            android:layout_width="88dp"
                            android:layout_height="88dp"
                            android:layout_marginEnd="34dp"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/button_caputre"
                            app:layout_constraintBottom_toBottomOf="@+id/PVCmain"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <RelativeLayout
                            android:id="@+id/punteroFocus"
                            android:layout_width="200px"
                            android:layout_height="200px"
                            android:animateLayoutChanges="true"
                            android:background="@drawable/pulse_camera"
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                        </RelativeLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150sp"
                        android:layout_marginTop="10dp"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/BCaptura"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="@drawable/button_states"
                            android:gravity="center"
                            android:visibility="visible"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintWidth_percent="0.5"
                            tools:ignore="SpeakableTextPresentCheck"

                            />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/RVCaptureImages"
                            android:layout_width="1.6in"
                            android:layout_height="1in"
                            android:layout_gravity="center"
                            android:background="@drawable/border_recycleview_camera"
                            android:foregroundGravity="center_vertical|center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp">

                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/BAgregateFile"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#051D0B"
                    android:drawableRight="@drawable/ic_baseline_drive_folder_upload_24"
                    android:gravity="center"
                    android:paddingRight="20dp"
                    android:shadowColor="#00FF2A"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="10"
                    android:text="Agregar Imagen desde el Almacenamiento"
                    android:textAllCaps="false"
                    android:textColor="#00FF21"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/BAgregate"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:text="Agregar Producto"
                    tools:ignore="TextContrastCheck" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>