<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainRootShowProduct"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.View.fragment.ProductosShow">
    <!-- TODO: Update blank fragment layout -->


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbarParent"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/md_purple_200">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:collapsedTitleTextColor="@color/md_white_1000"
            app:contentScrim="@color/md_deep_purple_300"
            app:expandedTitleGravity="start|bottom"
            app:expandedTitleMarginBottom="25dp"
            app:expandedTitleTextAppearance="@style/TextTitle"
            app:expandedTitleTextColor="@color/md_white_1000"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|enterAlwaysCollapsed"
            app:titleCollapseMode="scale">

            <com.github.ybq.parallaxviewpager.ParallaxViewPager
                android:id="@+id/RVimages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:scrollbars="horizontal"
                app:layout_collapseMode="parallax"
                app:mode="right_overlay"
                app:outset="62%"
                app:shadow_width="30dp">

            </com.github.ybq.parallaxviewpager.ParallaxViewPager>


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@color/black_overlay"
                android:contentInsetStart="0dp"
                android:contentInsetStartWithNavigation="0dp"
                android:paddingTop="25dp"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|snap|snapMargins"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:title="@string/titleProuctoSingle"
                app:titleTextColor="@color/md_deep_purple_300">

                <LinearLayout
                    android:id="@+id/BIShowP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/MBEditAndSave"
                        style="@style/ButonActionBar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_baseline_edit_24"
                        android:minWidth="50dp"

                        android:scaleX="0.6"
                        android:scaleY="0.6" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/MBEliminateItem"
                        style="@style/ButonActionBar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_baseline_delete_24"
                        android:minWidth="50dp"
                        android:scaleX="0.6"
                        android:scaleY="0.6" />


                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_white_1000"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbarStyle="outsideInset"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                app:cardUseCompatPadding="true"
                app:cardElevation="10dp"
                android:layout_gravity="center"
                app:cardCornerRadius="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:padding="5dp"
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:foregroundGravity="center"
                    android:gravity="top|center"
                    android:orientation="vertical">

                    <!--                <ImageView-->
                    <!--                    android:id="@+id/imageunique"-->
                    <!--                    android:layout_width="match_parent"-->
                    <!--                    android:layout_height="300dp"-->
                    <!--                    android:background="#B82727"-->
                    <!--                    app:srcCompat="@drawable/pulse_camera"-->
                    <!--                    android:transitionName="transtionexit"-->
                    <!--                    app:layout_constraintStart_toStartOf="parent"-->
                    <!--                    app:layout_constraintTop_toTopOf="parent" />-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:fontFamily="@font/lilitaoe_regular"
                            android:gravity="center_vertical"
                            android:text="Nombre: "
                            android:textSize="18dp"

                            />

                        <EditText
                            android:id="@+id/TTNombre"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:width="200dp"
                            android:enabled="false"
                            android:gravity="center_horizontal|center_vertical"
                            android:inputType="numberDecimal"
                            android:text="Nombre del producto"
                            android:textSize="15dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/TTTPrecio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:fontFamily="@font/lilitaoe_regular"
                            android:gravity="center_vertical"
                            android:text="Precio:"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/TTTPrecioCa"
                            style="@style/TextItemPrimero"
                            android:layout_width="wrap_content"
                            android:layout_height="53dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="0"
                            android:gravity="center_vertical"
                            android:text="C:"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/TTPrecio"
                            style="@style/EditTextItem"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:width="200dp"
                            android:enabled="false"
                            android:gravity="center_horizontal|center_vertical"
                            android:inputType="numberDecimal"
                            android:text="Sin Precio"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/TTTPrecioUn"

                            style="@style/TextItemPrimero"
                            android:layout_width="wrap_content"
                            android:layout_height="53dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="0"
                            android:gravity="center_vertical"
                            android:text="U:"

                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/TTPrecioUn"
                            style="@style/EditTextItem"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:width="200dp"
                            android:enabled="false"
                            android:gravity="center_horizontal|center_vertical"
                            android:inputType="numberDecimal"
                            android:text="Sin Precio"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/TTTMarca"
                            android:layout_width="wrap_content"
                            android:layout_height="53dp"
                            android:layout_weight="0"
                            android:fontFamily="@font/lilitaoe_regular"
                            android:gravity="center_vertical"
                            android:text="Marca:"
                            android:textSize="18dp" />

                        <EditText
                            android:id="@+id/TTMarca"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:layout_weight="1"
                            android:width="200dp"
                            android:enabled="false"
                            android:gravity="center_horizontal|center_vertical"
                            android:inputType="text"
                            android:text="Sin Marcas"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/TTTCategoria"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:fontFamily="@font/lilitaoe_regular"
                            android:gravity="center_vertical"
                            android:text="Categoria:"
                            android:textSize="18dp"

                            />

                        <EditText
                            android:id="@+id/TTCategoria"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:layout_weight="1"
                            android:width="200dp"
                            android:enabled="false"
                            android:gravity="center_horizontal|center_vertical"
                            android:inputType="text"
                            android:text="Sin Categorias"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/TTTStock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:fontFamily="@font/lilitaoe_regular"
                            android:gravity="center_vertical"
                            android:text="Sotck:"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/TTTStockGrant"
                            style="@style/TextItemPrimero"
                            android:layout_width="wrap_content"
                            android:layout_height="51dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="0"
                            android:gravity="center_vertical"

                            android:text="C:"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <EditText

                            android:id="@+id/TTStock"
                            style="@style/EditTextItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:width="200dp"
                            android:enabled="false"
                            android:gravity="center_horizontal|center_vertical"
                            android:inputType="number"
                            android:text="Sin Stock"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/TTTStockUnidad"
                            style="@style/TextItemPrimero"
                            android:layout_width="wrap_content"
                            android:layout_height="51dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="0"
                            android:gravity="center_vertical"
                            android:text="U:"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/TTStockU"
                            style="@style/EditTextItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:width="200dp"
                            android:enabled="false"
                            android:gravity="center_horizontal|center_vertical"
                            android:inputType="number"
                            android:text="Sin Stock"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/TTTCaracteristicas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:fontFamily="@font/lilitaoe_regular"
                            android:gravity="center_vertical"
                            android:text="Detalles:"
                            android:textSize="18dp" />

                        <EditText
                            android:id="@+id/TTCaracteristicas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:gravity="center_horizontal|center_vertical"
                            android:inputType="textMultiLine"
                            android:text="Sin Detalles"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/TTTQR"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_weight="0"
                            android:gravity="center_vertical"
                            android:text="QR:"
                            android:textSize="18dp"
                            android:fontFamily="@font/cherry_regular"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/TTQR"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:width="200dp"
                            android:enabled="false"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="Sin Codigo QR"
                            android:textColorHint="@color/md_black_1000"
                            android:textSize="18dp"
                            tools:ignore="SpeakableTextPresentCheck" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>